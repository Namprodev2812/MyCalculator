<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:weightSum="5"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_weight="2"
        android:background="#ECE9E9"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:padding="2dp"
            android:textSize="50sp"
            android:textColor="#000"
            android:hint="input number"
            android:id="@+id/edt_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--<TextView-->
            <!--android:padding="2dp"-->
            <!--android:text=""-->
            <!--android:textSize="60sp"-->
            <!--android:textStyle="bold"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:id="@+id/txt_result"-->
            <!--android:layout_below="@+id/edt_input"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"/>-->
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="3"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:text="1"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:id="@+id/btn_number1"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent" />

                    <Button
                        android:text="2"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:id="@+id/btn_number2"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent" />
                    <Button
                        android:text="3"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:id="@+id/btn_number3"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent" />
                    <Button
                        android:text="+"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:id="@+id/btn_number_cong"
                        android:layout_width="0dp"
                        android:layout_weight="2"

                        android:layout_height="match_parent" />
                    <Button
                        android:layout_margin="2dp"
                        android:text="c"
                        android:textColor="#FFFFFF"
                        android:background="#673AB7"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:id="@+id/btn_number_C"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:text="4"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:id="@+id/btn_number4"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent" />

                    <Button
                        android:text="5"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:id="@+id/btn_number5"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent" />
                    <Button
                        android:text="6"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:id="@+id/btn_number6"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent" />
                    <Button
                        android:text="-"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:id="@+id/btn_number_tru"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent" />
                    <Button
                        android:text="AC"
                        android:layout_margin="2dp"
                        android:background="#E91E63"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:id="@+id/btn_number_AC"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:weightSum="2"
                android:layout_weight="8"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:layout_weight="1"
                        android:weightSum="8"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Button

                            android:text="7"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:id="@+id/btn_number7"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <Button
                            android:text="8"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:id="@+id/btn_number8"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                        <Button
                            android:text="9"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:id="@+id/btn_number9"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                        <Button
                            android:text="*"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:id="@+id/btn_number_nhan"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:layout_weight="8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:text="0"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:id="@+id/btn_number0"
                            android:layout_weight="4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <Button
                            android:text="."
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:id="@+id/btn_number_phay"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                        <Button
                            android:text="/"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:id="@+id/btn_number_chia"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:id="@+id/btn_number_result"
                android:text="="
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="#FF5722"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
